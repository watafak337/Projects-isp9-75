#include <iostream>
using namespace std;
int main(){
	int a;
	setlocale(0, "");
	int choice;


	// Выводим меню
	cout << "Программа \"\"" << endl;
	cout << "[1] " << endl;
	cout << "[2] " << endl;
	cout << "[3] " << endl;
	cout << "[4] " << endl;

	// Получаем выбор пользователя
	cout << "Введите значение от [1] до [4]";
	cin >> choice;

	// Обрабатываем выбор с помощью if-else
	if (choice == 1) {
		cout << "Сейчас лето, можно надеть легкую одежду и идти гулять." << endl;
	}
	else if (choice == 2) {
		cout << "Сейчас осень, следует одеться тепло и взять с собой зонт." << endl;
	}
	else if (choice == 3) {
		cout << "Сейчас зима, пора надевать зимнюю одежду и ботинки." << endl;
	}
	else if (choice == 4) {
		cout << "Сейчас весна, природа просыпается, всё расцветает" << endl;
	}
	else {
		cout << "Такого времени года нету в данном меню." << endl;
	}
	return 0;
}
